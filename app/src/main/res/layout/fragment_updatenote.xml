<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="200dp"
    android:layout_width="match_parent"
    android:layout_height="310dp">

    <ImageView
        android:id="@+id/iv_imagecontent"
        android:layout_width="166dp"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="63dp" />


    <EditText
        android:id="@+id/et_updateNote_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/tv_updatenote_title"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:text="题目"
        android:textSize="15sp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/materi_sp"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="203dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_updateNote_commit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="210dp"
            android:layout_weight="0.6"
            android:background="@null"
            android:src="@drawable/commitnote" />

        <TextView
            android:id="@+id/tv_updateNote_commit"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginBottom="227dp"
            android:layout_marginEnd="98dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="提交" />
    </LinearLayout>
</RelativeLayout>